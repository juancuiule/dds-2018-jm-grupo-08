<!DOCTYPE html>
<html lang="es">
{{#partial "title"}}
	<title>Login</title>
{{/partial}}
{{> partials/head.hbs}}
<body>
  {{> partials/nav.hbs}}
  <header>
    <h1>Ingreso</h1>
    <form class="login-form" action="/login" method="post">
      <div class="form-group">
        <input type="text" class="form-control" id="userInput" placeholder="Usuario" name="username">
      </div>
      <div class="form-group">
        <input type="password" class="form-control" id="passwordInput" placeholder="Password" name="password">
      </div>
      <button type="submit" class="btn btn-primary">Ingresar</button>
    </form>
  </header>
</body>
</html>